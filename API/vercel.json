{
  "version": 2,
  "builds": [
    {
      "src": "api/standalone.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "pip": [
          "--upgrade", "pip",
          "--requirement", "vercel-minimal-requirements.txt"
        ],
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/standalone.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  }
}
