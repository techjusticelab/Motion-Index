# DigitalOcean Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your actual values

# DigitalOcean Spaces Configuration
# ---------------------------------
# Get these from: DigitalOcean Control Panel > API > Spaces Keys
DO_SPACES_KEY=your_spaces_access_key_here
DO_SPACES_SECRET=your_spaces_secret_key_here
DO_SPACES_BUCKET=motion-index-docs
DO_SPACES_REGION=nyc3
DO_SPACES_CDN_ENDPOINT=https://motion-index-docs.nyc3.cdn.digitaloceanspaces.com

# Storage Backend Configuration
# -----------------------------
USE_CLOUD_STORAGE=true
STORAGE_BACKEND=spaces

# Supabase Configuration
# ----------------------
# Get these from: https://supabase.com/dashboard/project/your-project/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration (Optional)
# -------------------------------
# Only needed if you want AI-powered document classification
OPENAI_API_KEY=your_openai_api_key_here

# Elasticsearch Configuration
# ---------------------------
# These will be automatically set by DigitalOcean App Platform for managed database
ES_HOST=your-managed-elasticsearch-host
ES_PORT=9200
ES_USE_SSL=true
ES_INDEX=cpda

# Application Configuration
# -------------------------
ENVIRONMENT=production
LOG_LEVEL=info
MAX_WORKERS=4
BATCH_SIZE=100
MAX_FILE_SIZE=52428800

# DigitalOcean App Platform Deployment
# ------------------------------------
# Get this from: DigitalOcean Control Panel > API > Personal Access Tokens
DIGITALOCEAN_ACCESS_TOKEN=your_personal_access_token_here