# Local Development Environment Configuration
# ===========================================
# Copy this file to .env for local development

# Storage Backend Configuration (Local)
# -------------------------------------
USE_CLOUD_STORAGE=false
STORAGE_BACKEND=local
STORAGE_PATH=./API/data

# Supabase Configuration
# ----------------------
# Get these from: https://supabase.com/dashboard/project/your-project/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# OpenAI Configuration (Optional)
# -------------------------------
# Only needed if you want AI-powered document classification
OPENAI_API_KEY=your_openai_api_key_here

# DigitalOcean Managed OpenSearch Configuration
# ---------------------------------------------
ES_HOST=your-digitalocean-opensearch-host
ES_PORT=25060
ES_USERNAME=your_opensearch_username
ES_PASSWORD=your_opensearch_password
ES_USE_SSL=true
ES_INDEX=documents

# Application Configuration
# -------------------------
ENVIRONMENT=development
LOG_LEVEL=debug
MAX_WORKERS=2
BATCH_SIZE=50
MAX_FILE_SIZE=52428800

# Frontend Configuration (for .env.local in Web/)
# -----------------------------------------------
PUBLIC_API_URL=http://localhost:8000
PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
