{
  "version": 2,
  "builds": [
    { 
      "src": "Web/package.json", 
      "use": "@vercel/node"
    },
    { 
      "src": "API/api/index.py", 
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "pip": ["--requirement", "API/vercel-requirements.txt"]
      }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/API/api/index.py" }
  ],
  "env": {
    "PYTHONPATH": "./API"
  }
}
