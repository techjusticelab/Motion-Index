# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-public-anon-key
SUPABASE_SERVICE_KEY=your-private-service-key

# OpenSearch Configuration (DigitalOcean Managed Database)
ES_HOST=your-opensearch-host.k.db.ondigitalocean.com
ES_PORT=25060
ES_USERNAME=doadmin
ES_PASSWORD=your-opensearch-password
ES_USE_SSL=true
ES_INDEX=documents

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key

# GitHub Webhook Configuration
GITHUB_WEBHOOK_SECRET=your-webhook-secret-from-github

# Domain Configuration (Update these with your actual domain)
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
ADMIN_DOMAIN=admin.yourdomain.com

# SSL Configuration
SSL_EMAIL=your-email@domain.com

# Backup Configuration (Optional)
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration (Optional)
MONITORING_EMAIL=alerts@yourdomain.com
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook